        public static int? iTinhTuoi(DateTime? NgaySinh, DateTime? TgVaoVien, DateTime? TgRaVien)
        {
            int? tuoi = null;
            if (TgVaoVien == null)
                TgVaoVien = DateTime.Now;
            if (NgaySinh != null)
                tuoi = GetSoTuoi(NgaySinh.Value, TgVaoVien.Value);
            return tuoi;
        }
