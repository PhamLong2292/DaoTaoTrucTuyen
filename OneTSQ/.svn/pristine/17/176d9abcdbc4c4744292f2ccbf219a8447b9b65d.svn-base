                    "       RenderInfo=CreateRenderInfo();\r\n" +
                    "       MenuTemplateId= document.getElementById('txtMenuTemplateId').value;\r\n" +
                    "       MenuTemplateGroupFunctionName = document.getElementById('txtMenuTemplateGroupFunctionName').value;\r\n" +
